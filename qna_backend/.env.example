# Django settings
DJANGO_SECRET_KEY=CHANGE_ME_IN_PRODUCTION
DJANGO_DEBUG=true

# CORS
CORS_ALLOW_ALL=true

# AI configuration
# Set USE_MOCK_AI=true to use a mocked response (useful in development without keys)
USE_MOCK_AI=true

# Gemini API key for real responses (from Google AI Studio)
GEMINI_API_KEY=

# Optional: pick a Gemini model
GEMINI_MODEL=gemini-1.5-flash

# Optional: LangChain tracing settings
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=

# Optional: MCP server URL if using a gateway (not required for basic Gemini chat)
MCP_SERVER_URL=
